<%- include('partials/header.ejs'); %>
<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input class="form-control" type="text" id="postTitle" name="postTitle">
       
    </div>
    <div class="form-group">
        <label for="postBody">Post</label>
        <textarea id="postBody" name="postBody" class="form-control" rows="5"></textarea>
    </div>
    <button class="btn btn-primary btn-sm" type="submit" name="button">Publish</button>
</form>
